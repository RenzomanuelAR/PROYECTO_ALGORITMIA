package cibertec;

import static cibertec.Tienda.marca0;
import static cibertec.Tienda.marca1;
import static cibertec.Tienda.marca2;
import static cibertec.Tienda.marca3;
import static cibertec.Tienda.marca4;

import java.awt.BorderLayout;

import javax.swing.JButton;
import javax.swing.JDialog;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JLabel;
import javax.swing.JComboBox;
import javax.swing.DefaultComboBoxModel;
import javax.swing.UIManager;
import javax.swing.JTextField;

import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;

public class DialogoModificacion extends JDialog implements ActionListener {

	private static final long serialVersionUID = 1L;
	private final JPanel contentPanel = new JPanel();
	private JLabel lblMarca;
	private JLabel lblGarantia;
	private JLabel lblMaterial;
	private JComboBox<String> cboMarca;
	private JTextField txtGarantia;
	private JTextField txtMaterial;
	private JButton btnCerrar;
	private JLabel lblTamaño;
	private JLabel lblPrecio;
	private JTextField txtPrecio;
	private JButton btnGrabar;
	private JTextField txtTamaño;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		try {
			UIManager.setLookAndFeel(UIManager.getSystemLookAndFeelClassName());
		}
		catch (Throwable e) {
			e.printStackTrace();
		}
		try {
			DialogoModificacion dialog = new DialogoModificacion();
			dialog.setDefaultCloseOperation(JDialog.DISPOSE_ON_CLOSE);
			dialog.setVisible(true);
		}
		catch (Exception e) {
			e.printStackTrace();
		}
	}

	/**
	 * Create the dialog.
	 */
	public DialogoModificacion() {
		setModal(true);
		setTitle("Modificar alfajor");
		setBounds(100, 100, 441, 207);
		getContentPane().setLayout(new BorderLayout());
		contentPanel.setBorder(new EmptyBorder(5, 5, 5, 5));
		getContentPane().add(contentPanel, BorderLayout.CENTER);
		contentPanel.setLayout(null);

		lblMarca = new JLabel("Marca");
		lblMarca.setBounds(10, 15, 89, 14);
		contentPanel.add(lblMarca);

		lblPrecio = new JLabel("Precio (S/)");
		lblPrecio.setBounds(10, 40, 89, 14);
		contentPanel.add(lblPrecio);

		lblGarantia = new JLabel("Garant\u00EDa (a\u00F1os)");
		lblGarantia.setBounds(10, 65, 89, 14);
		contentPanel.add(lblGarantia);

		lblTamaño = new JLabel("Tama\u00F1o");
		lblTamaño.setBounds(10, 90, 104, 14);
		contentPanel.add(lblTamaño);

		lblMaterial = new JLabel("Material");
		lblMaterial.setBounds(10, 115, 89, 14);
		contentPanel.add(lblMaterial);

		cboMarca = new JComboBox<String>();
		cboMarca.addActionListener(this);
		cboMarca.setModel(new DefaultComboBoxModel<String>(new String[] { marca0, marca1, marca2, marca3, marca4 }));
		cboMarca.setBounds(124, 12, 146, 20);
		contentPanel.add(cboMarca);

		txtPrecio = new JTextField();
		txtPrecio.setBounds(124, 37, 146, 20);
		contentPanel.add(txtPrecio);
		txtPrecio.setColumns(10);
		txtPrecio.setText("" + Tienda.precio0);

		txtGarantia = new JTextField();
		txtGarantia.setBounds(124, 62, 146, 20);
		contentPanel.add(txtGarantia);
		txtGarantia.setColumns(10);
		txtGarantia.setText("" + Tienda.garantia0);

		txtTamaño = new JTextField();
		txtTamaño.setBounds(124, 87, 146, 20);
		contentPanel.add(txtTamaño);
		txtTamaño.setColumns(10);
		txtTamaño.setText(Tienda.tamaño0 + "");
		
		txtMaterial = new JTextField();
		txtMaterial.setBounds(124, 112, 146, 20);
		contentPanel.add(txtMaterial);
		txtMaterial.setColumns(10);
		txtMaterial.setText("" + Tienda.material0);

		btnCerrar = new JButton("Cerrar");
		btnCerrar.addActionListener(this);
		btnCerrar.setBounds(326, 11, 89, 23);
		contentPanel.add(btnCerrar);
		
		btnGrabar = new JButton("Grabar");
		btnGrabar.addActionListener(this);
		btnGrabar.setBounds(326, 36, 89, 23);
		contentPanel.add(btnGrabar);
	}

	public void actionPerformed(ActionEvent arg0) {
		if (arg0.getSource() == btnGrabar) {
			actionPerformedBtnGrabar(arg0);
		}
		if (arg0.getSource() == btnCerrar) {
			actionPerformedBtnCerrar(arg0);
		}
		if (arg0.getSource() == cboMarca) {
			actionPerformedComboBox(arg0);
		}
	}

	protected void actionPerformedComboBox(ActionEvent arg0) {
		int modelo;
		modelo = cboMarca.getSelectedIndex();
		switch (modelo) {
			case 0:
				txtPrecio.setText(Tienda.precio0 + "");
				txtGarantia.setText(Tienda.garantia0 + "");
				txtTamaño.setText(Tienda.tamaño0 + "");
				txtMaterial.setText(Tienda.material0 + "");
				break;

			case 1:
				txtPrecio.setText(Tienda.precio1 + "");
				txtGarantia.setText(Tienda.garantia + "");
				txtTamaño.setText(Tienda.tamaño1 + "");
				txtMaterial.setText(Tienda.material1 + "");
				break;

			case 2:
				txtPrecio.setText(Tienda.precio2 + "");
				txtGarantia.setText(Tienda.garantia2 + "");
				txtTamaño.setText(Tienda.tamaño2 + "");
				txtMaterial.setText(Tienda.material2 + "");
				break;

			case 3:
				txtPrecio.setText(Tienda.precio3 + "");
				txtGarantia.setText(Tienda.garantia3 + "");
				txtTamaño.setText(Tienda.tamaño3 + "");
				txtMaterial.setText(Tienda.material3 + "");
				break;

			default:
				txtPrecio.setText(Tienda.precio4 + "");
				txtGarantia.setText(Tienda.garantia4 + "");
				txtTamaño.setText(Tienda.tamaño4 + "");
				txtMaterial.setText(Tienda.material4 + "");
		}
	}

	protected void actionPerformedBtnCerrar(ActionEvent arg0) {
		dispose();
	}
	protected void actionPerformedBtnGrabar(ActionEvent arg0) {
	}
}
